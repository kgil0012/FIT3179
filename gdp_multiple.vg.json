{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "repeat": {
      "row": ["GDP", "GDP Per Capita",  "Inflation Rate"],
      "column": ["Education Expenditure", "Health Expenditure", "Unemployment"]
    },
    "params": [
      {"name": "Country",
        "bind":{
          "input": "select",
          "options": [
            null,
            "JPN",
            "DEU",
            "GBR",
            "FRA",
            "IND",
            "RUS",
            "CAN",
            "AUS"
          ],
          "labels": [
           "Show All",
           "Japan",
           "Germany",
           "United Kingdom",
           "France",
           "India",
           "Russian Federation",
           "Canada",
           "Australia"
          ],
          "name": "Country"
        }
      }
    ],
    "transform": [
      {
        "filter": {"field": "Code", "oneOf": ["AUS", "JPN", "GBR", "CAN", "RUS", "DEU", "FRA", "IND"]}
      },
      {  "filter"  :   "Country == null || datum.Code == Country"  }
    ],
    "spec": {
      "data": {"url": "Countries.csv"},
      "width": 150,
      "height":100,
      "mark": "point",
      "params": [
        {
          "name": "brush",
          "select": {
            "type": "interval",
            "resolve": "union",
            "on": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
            "translate": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
            "zoom": "wheel![event.shiftKey]"
          }
        },
        {
          "name": "grid",
          "select": {
            "type": "interval",
            "resolve": "global",
            "translate": "[mousedown[!event.shiftKey], window:mouseup] > window:mousemove!",
            "zoom": "wheel![!event.shiftKey]"
          },
          "bind": "scales"
        }
      ],
      "encoding": {
        "x": {"field": {"repeat": "column"}, "type": "quantitative"},
        "y": {
          "field": {"repeat": "row"},
          "type": "quantitative",
          "axis": {"minExtent": 30}
        },
        "color": {
          "condition": {
            "param": "brush",
            "field": "Country Name",
            "type": "nominal"
          },
          "value": "grey"
        }
      }
    }
  }
  